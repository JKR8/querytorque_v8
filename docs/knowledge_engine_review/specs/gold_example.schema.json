{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://querytorque.io/schemas/gold_example.json",
  "title": "Gold Example",
  "description": "Promoted optimization example for use in prompts",
  "type": "object",
  "required": ["schema_version", "id", "query_id", "dialect", "original_sql", "optimized_sql", "speedup", "status"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "2.0"
    },
    "id": {
      "type": "string",
      "pattern": "^q[0-9]{1,3}[a-z]?_[a-z_]+$",
      "description": "Example identifier (e.g., q6_date_cte)"
    },
    "query_id": {
      "type": "string",
      "pattern": "^q[0-9]{1,3}[a-z]?$",
      "description": "Source query identifier"
    },
    "dialect": {
      "type": "string",
      "enum": ["duckdb", "postgresql"],
      "description": "SQL dialect"
    },
    "classification": {
      "type": "object",
      "description": "How this example is categorized",
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Tags for filtering and matching"
        },
        "archetype": {
          "type": "string",
          "description": "Query archetype this example represents"
        },
        "transforms": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Transforms demonstrated"
        },
        "complexity": {
          "type": "string",
          "enum": ["simple", "moderate", "complex"],
          "description": "Complexity level"
        }
      }
    },
    "original_sql": {
      "type": "string",
      "minLength": 1,
      "description": "Original query SQL"
    },
    "optimized_sql": {
      "type": "string",
      "minLength": 1,
      "description": "Optimized query SQL"
    },
    "explanation": {
      "type": "object",
      "description": "Why this optimization works",
      "properties": {
        "what": {
          "type": "string",
          "description": "What transform was applied"
        },
        "why": {
          "type": "string",
          "description": "Why this improves performance"
        },
        "when": {
          "type": "string",
          "description": "When to apply this technique"
        },
        "when_not": {
          "type": "string",
          "description": "When NOT to apply this technique"
        }
      }
    },
    "outcome": {
      "type": "object",
      "description": "Validation results",
      "properties": {
        "speedup": {
          "type": "number",
          "minimum": 0,
          "description": "Measured speedup ratio"
        },
        "original_ms": {
          "type": "number",
          "minimum": 0,
          "description": "Original execution time"
        },
        "optimized_ms": {
          "type": "number",
          "minimum": 0,
          "description": "Optimized execution time"
        },
        "validated_at_sf": {
          "type": "number",
          "description": "Scale factor where validated"
        },
        "validation_confidence": {
          "type": "string",
          "enum": ["high", "row_count_only", "zero_row_unverified"],
          "description": "Confidence in validation"
        },
        "rows_match": {
          "type": "boolean",
          "description": "Whether row counts match"
        },
        "checksum_match": {
          "type": "boolean",
          "description": "Whether full result checksums match"
        }
      }
    },
    "provenance": {
      "type": "object",
      "description": "Where this example came from",
      "properties": {
        "source_run": {
          "type": "string",
          "description": "Run that produced this example"
        },
        "worker_id": {
          "type": "integer",
          "description": "Worker that produced this example"
        },
        "model": {
          "type": "string",
          "description": "LLM model used"
        },
        "promoted_at": {
          "type": "string",
          "format": "date-time",
          "description": "When this was promoted to gold"
        },
        "promoted_by": {
          "type": "string",
          "enum": ["auto", "human"],
          "description": "How this was promoted"
        },
        "reviewed_by": {
          "type": ["string", "null"],
          "description": "Human reviewer (if applicable)"
        }
      }
    },
    "status": {
      "type": "string",
      "enum": ["active", "deprecated", "superseded"],
      "description": "Current status"
    },
    "superseded_by": {
      "type": ["string", "null"],
      "description": "ID of example that supersedes this (if deprecated)"
    },
    "usage_count": {
      "type": "integer",
      "minimum": 0,
      "description": "How many times this example has been used in prompts"
    },
    "last_used": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "When this example was last used"
    }
  }
}
