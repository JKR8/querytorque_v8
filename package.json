{
  "name": "querytorque",
  "private": true,
  "version": "1.0.0",
  "description": "QueryTorque - SQL and DAX optimization tools",
  "scripts": {
    "dev:sql": "pnpm --filter @querytorque/sql-web dev",
    "dev:dax": "pnpm --filter @querytorque/dax-web dev",
    "dev": "pnpm run --parallel dev:sql dev:dax",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
