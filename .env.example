# QueryTorque Environment Configuration
# Copy this file to .env and update values for your environment
# IMPORTANT: Never commit .env to version control

# =============================================================================
# Environment
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO

# =============================================================================
# Database Configuration
# =============================================================================
# Option 1: Full connection URL (takes precedence)
# QT_DATABASE_URL=postgresql://querytorque:password@localhost:5432/querytorque

# Option 2: Individual components
QT_DB_HOST=localhost
QT_DB_PORT=5432
QT_DB_NAME=querytorque
QT_DB_USER=querytorque
QT_DB_PASSWORD=querytorque_dev

# Database options
QT_DB_ECHO=false
QT_SERVERLESS=false

# =============================================================================
# Auth0 Configuration
# =============================================================================
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_API_AUDIENCE=https://api.querytorque.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# =============================================================================
# Stripe Billing Configuration
# =============================================================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs
STRIPE_PRICE_PRO_MONTHLY=price_...
STRIPE_PRICE_PRO_YEARLY=price_...
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_...
STRIPE_PRICE_ENTERPRISE_YEARLY=price_...

# =============================================================================
# LLM API Keys
# =============================================================================
# Anthropic (Claude) - Primary
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI (GPT) - Alternative
OPENAI_API_KEY=sk-...

# Groq (Fast inference)
GROQ_API_KEY=gsk_...

# Google (Gemini)
GOOGLE_API_KEY=...

# Default LLM provider
QT_LLM_PROVIDER=anthropic
QT_LLM_MODEL=claude-sonnet-4-20250514

# =============================================================================
# Pattern Selector (local Ollama or cloud OpenAI-compatible endpoint)
# =============================================================================
# Leave URL empty to disable (uses tag overlap matching instead)
QT_PATTERN_SELECTOR_URL=
QT_PATTERN_SELECTOR_MODEL=qwen2.5-coder:14b-instruct-q4_K_M
QT_PATTERN_SELECTOR_API_KEY=

# =============================================================================
# Service URLs (for local development)
# =============================================================================
QT_CALCITE_URL=http://localhost:8001
QT_SQL_API_URL=http://localhost:8002
QT_DAX_API_URL=http://localhost:8003

# =============================================================================
# Redis Configuration (optional)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Security
# =============================================================================
# Secret key for session signing (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_LLM_SUGGESTIONS=true
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_TEAM_COLLABORATION=false

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_FREE_TIER=100
RATE_LIMIT_PRO_TIER=1000
RATE_LIMIT_ENTERPRISE_TIER=10000
